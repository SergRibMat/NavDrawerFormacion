<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_show_dialog_profile_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Set Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_show_dialog_profile_data"
        app:layout_constraintStart_toStartOf="@+id/btn_show_dialog_profile_data"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_dialog_profile_data"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_postal_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_surname_two"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_surname_two"
        app:layout_constraintTop_toBottomOf="@+id/tv_surname_two"
        tools:text="PostalCode" />

    <TextView
        android:id="@+id/tv_surname_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="Surname One" />

    <TextView
        android:id="@+id/tv_surname_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_surname_one"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_surname_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_surname_one"
        tools:text="Surname Two" />

</androidx.constraintlayout.widget.ConstraintLayout>